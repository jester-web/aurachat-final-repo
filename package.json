{
  "name": "aurachat",
  "version": "1.0.1", 
  "description": "AuraChat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "socket.io",
    "webrtc",
    "firebase"
  ],
  "author": "Kaan",
  "license": "ISC",
  "devDependencies": {
    "electron": "29.1.0",           
    "electron-builder": "^24.13.3" 
  },
  "dependencies": {
    "electron-updater": "^6.1.7",   
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "fs": "^0.0.1-security",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "build": {
    "appId": "com.aurachat.ekip",
    "productName": "AuraChat",
    "directories": {
      "output": "dist"
    },
    "nsisWeb": {
      "appPackageUrl": "https://github.com/jester-web/aurachat-final-repo/releases/download/v${version}/AuraChat-${version}.nsis.7z",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "files": [
      "!dist/",
      "!build/",
      "!node_modules/",
      "**/*"
    ],
    
    "publish": [
      {
        "provider": "github",
        "owner": "jester-web", 
        "repo": "aurachat-final-repo" 
      }
    ]
  }
}
